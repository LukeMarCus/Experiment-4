		cout << "4. Division" << endl;
		cout << "5. Factorial" << endl;

		cout << endl << endl;

		cin >> a;

		cout << endl << endl;

	
		switch (a)
		{
			case 1:
			{
				add();
				break;
			}
			case 2:
			{
				ming();
				break;
			}
			case 3:
			{
				times();
				break;
			}
			case 4:
			{	
				divide();
				break;
			}
			case 5:
			{
				factorial();
				break;
			}
			default:
			{
				cout << "Choose from 1 to 5 only.";
				break;
			}
		}
		cout << endl << endl;

		cout << "----------------------------------------------------" << endl;
		cout << "Do you want to run it again?" << endl;
		cout << "----------------------------------------------------" << endl;

		cout << endl << endl;

		cout << "1. Yes" << endl;
		cout << "2. No" << endl;

		cout << endl << endl;

		cin >> b;

		cout << endl << endl;
		cout << endl << endl;
		cout << endl << endl;
		cout << endl << endl;
		cout << endl << endl;
		cout << endl << endl;
		cout << endl << endl;
	}

	cout << endl << endl;

	cout << "----------------------------------------------------" << endl;
