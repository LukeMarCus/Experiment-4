#include<iostream>
#include<conio.h>
#include<cmath>

using namespace std;

void add()
{
	int x;
	int y;

	cout << "----------------------------------------------------" << endl;
	cout << "Insert two integral numbers." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;

	cout << "First number: "; 
	cin >> x;

	cout << "Second number: ";
	cin >> y;

	cout << endl << endl;

	cout << "----------------------------------------------------" << endl;
	cout << "The sum of" << x << " + " << y << " is " << x + y << "." <<  endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;
}

void ming()
{
	int x;
	int y;

	cout << "----------------------------------------------------" << endl;
	cout << "Insert two integral numbers." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;

	cout << "First number: ";
	cin >> x;

	cout << "Second number: ";
	cin >> y;

	cout << endl << endl;

	cout << "----------------------------------------------------" << endl;
	cout << "The difference of" << x << " - " << y << " is " << x - y << "." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;
}

void times()
{
	int x;
	int y;

	cout << "----------------------------------------------------" << endl;
	cout << "Insert two integral numbers." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;

	cout << "First number: ";
	cin >> x;

	cout << "Second number: ";
	cin >> y;

	cout << endl << endl;

	cout << "----------------------------------------------------" << endl;
	cout << "The product of" << x << " times " << y << " is " << x * y << "." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;
}

void divide()
{
	int x;
	int y;
	double q;

	cout << "----------------------------------------------------" << endl;
	cout << "Insert two integral numbers." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;

	cout << "First number: ";
	cin >> x;

	cout << "Second number: ";
	cin >> y;

	cout << endl << endl;

	q = x / y;

	cout << "----------------------------------------------------" << endl;
	cout << "The quotient of " << x << " divided by " << y << " is " << q << "." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;
}

void factorial()
{
	int x;
	int y;
	int z = 1;
	int w = 1;

	cout << "----------------------------------------------------" << endl;
	cout << "Insert two integral numbers." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;

	cout << "First number: ";
	cin >> x;

	cout << "Second number: ";
	cin >> y;

	cout << endl << endl;

	for (int i = x; i > 0; i--)
	{
		z = z * i;
	}

	for (int i = y; i > 0; i--)
	{
		w = w * i;
	}

	cout << "----------------------------------------------------" << endl;
	cout << "The facorial of " << x << " is " << z << "." << endl;
	cout << "The facorial of " << y << " is " << w << "." << endl;
	cout << "----------------------------------------------------" << endl;

	cout << endl << endl;
}

int main()
{
	int a;
	int b = 1;
	while (b == 1)
	{ 
